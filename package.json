{
  "name": "coinhawk",
  "version": "1.0.0",
  "main": "index.tsx",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build:apk": "npx expo export --platform android && npx expo run:android --variant release",
    "build:debug-apk": "npx expo export --platform android && npx expo run:android --variant debug", 
    "build:gradle": "npx expo prebuild --platform android && cd android && ./gradlew assembleRelease && cd ..",
    "copy:apk": "cp android/app/build/outputs/apk/release/app-release.apk ./CoinHawk-$(date +%Y%m%d).apk && ls -lh CoinHawk-*.apk",
    "clean:build": "rm -rf android/app/build && rm -rf .expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.1.0",
    "@react-navigation/bottom-tabs": "^7.4.4",
    "@react-navigation/native": "^7.1.16",
    "babel-preset-expo": "^13.2.3",
    "expo": "~53.0.20",
    "expo-status-bar": "~2.2.3",
    "nativewind": "^4.1.23",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-screens": "~4.11.1",
    "expo-dev-client": "~5.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@react-native-community/cli": "^19.1.1",
    "@types/react": "~19.0.10",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3"
  },
  "private": true
}
